  <div class="jumbotron text-center {{#if darkMode}}bg-dark text-white{{else}} text-dark{{/if}}">
    <h1>Search Casual Web Templates!</h1>
    <p>Download our high-quality web templates for free or at a cost.</p>

    <!-- Search Bar -->
    <form class="form-inline d-flex justify-content-center mt-3" action="/templates/search" method="POST" role="search">
        <input class="form-control mr-sm-2" type="search" placeholder="Search templates" aria-label="Search" name="searchTerm">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
</div>

 <div class="container  {{#if darkMode}}bg-dark text-dark{{else}}bg-white text-dark{{/if}}">
  <div class="row mb-4">
    {{#each templates}}
    <div class="col-sm-4 mb-4">
      <div class="card">
        <img class="card-img-top" src="../templatephotos/{{downloadtempname this}}.webp" alt="Image">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.description}}</p>
          <div class="d-flex justify-content-between align-items-center">
               <button type="submit" class="btn btn-warning font-weight-bold temppayment-btn" data-name="{{downloadtempname this}}" data-price="{{this.price}}" > {{freeornot this.price}}</button>
            <button type="button" class="btn btn-primary live-demo-button" data-toggle="modal" data-target="#liveDemoModal" data-demo-url="livedemo/{{downloadtempname this}}">
              Live Demo
            </button>

            <div class="modal fade" id="liveDemoModal" tabindex="-1" role="dialog" aria-labelledby="liveDemoModalLabel" aria-hidden="true">
              <div class="modal-dialog custom-modal" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="liveDemoModalLabel">Live Demo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <iframe src="" frameborder="0" class="demoframe" id="demoIframe"></iframe>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
