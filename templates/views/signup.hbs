<!DOCTYPE html>
<html lang="en">
<head>
   {{>header}}
   <title>sign up page</title>
   <link rel="stylesheet" href="/css/{{#if darkMode}}signupdarkstyle.css{{else}}signupstyle.css{{/if}}">
   <script src="js/signupscript.js" defer></script>
   
</head>
<body>
    {{>navbar}}
    <main>
        <div class="container">
            <div class="form-box">
                <h1 id="title">Sign Up</h1>
                <p>Already have an account? <a href="signin">Log in</a></p>

                {{!-- account created --}}
                    <div id="popup" class="popup">
                        <div class="popup-content">
                            <span class="close" id="closePopupButton">&times;</span>
                            <p class="error-message">Account already in use!</p>
                        </div>
                    </div>


                    <div id="successPopup" class="popup">
                        <div class="popup-content">
                            <span class="close" id="closesuccessPopupButton">&times;</span>
                            <p class="success-message">Email successfully created!</p>
                        </div>
                    </div>




                {{!-- account craeted finished --}}


                <form id="my-form" action="/signup" method="POST">
                    <div class="input-group">
                        <div class="input-field" id="namefield">
                            <i class="fa-solid fa-user"></i>
                            <input type="text" placeholder="First Name" id="firstname" name="firstname", value="">
                        </div>

                        <div class="input-field" id="namefield">
                            <i class="fa-solid fa-user"></i>
                            <input type="text" placeholder="Last Name" id="lastname" name="lastname", value="">
                        </div>

                        
                        
                        <div class="input-field">
                            <i class="fa-solid fa-envelope"></i>
                            <input type="email" placeholder="Email" id="email" name="email", value="">
                        </div>   

                        <div class="input-field">
                            <i class="fa-solid fa-lock"></i>
                            <input type="password" placeholder="Password" id="password" name="password", value="">
                        </div>

                        
                



                        <p>Forgot password? <a href="forgot-password">Click here!</a></p>
                    </div>

                    
                    <div class="btn-field">
                        <button id="signupbtn" type="submit">Sign up</button>
                    </div>

                    

                </form>


                
                
            </div>
        </div>

    
    </main>


    {{>footer}}
</body>
</html>
