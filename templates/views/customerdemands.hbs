<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Users</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">

    </div>
  </div>
</div>
 
 {{#each messages}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  
{{{ this }}}
<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

</div>
{{/each}}


{{#each alreadymessages}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  
{{{ this }}}
<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

</div>
{{/each}}

<div class="table-responsive">

  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Number</th>
       
        <th scope="col">Message</th>
        <th scope="col" class="text-end">Action</th>
      </tr>
    </thead>

    <tbody>
      {{#each customerContactUsData}}
      {{#each this}}
        <tr class="align-middle">
          <td>{{this.contactus.name}}</td>
          <td>{{this.contactus.phone}}</td>
        <td>
          <div class="scrollable-message">
            {{this.contactus.message}}
          </div>
        </td>
          <td class="text-end">

            <div class="d-flex flex-row justify-content-end gap-2">

              <a href=  "/admin/view/{{this._id}}" type="button" class="btn btn-primary btn-small">
                <i class="bi bi-eye"></i>
              </a>

              
              <a href="/admin/edit/{{this._id}}" type="button" class="btn btn-warning btn-small">
                <i class="bi bi-pencil"></i>
              </a>

              <form action="/admin/edit/{{this._id}}?_method=DELETE" method="POST" class="position-relative">
                <button type="submit" class="btn btn-danger btn-small">
                  <i class="bi bi-person-x"></i>
                </button>
              </form>

              

            </div>

          </td>
        </tr>
        {{/each}}
      {{/each}}

    </tbody>

  </table>
</div>

