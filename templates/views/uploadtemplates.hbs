<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Uploading Templates</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button  class="btn btn-sm btn-outline-secondary">?</button>
    </div>
  </div>
</div>

<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:history.back()">Dashboard</a></li>
                </ol>
            </nav>
        </div>
    </div>
</div>


<form action="/admin/uptemplatesdb/?_method=PUT" method="POST">

    <div class="row form-group mb-4">

        <div class="col">
            <label for="firstname">Template Name</label>
            <input type="text" class="form-control" id="tempname" name="tempname"  placeholder="Template Name" required  >
        </div>


        
    </div>

    <div class="row form-group mb-4">

      <div class="col">
        <label for="description" class="form-label">Template description</label>
        <textarea class="form-control" id="templatedetails" name="templatedetails" rows="3" required></textarea>
      </div>
    
        
    </div>

     <div class="row form-group mb-4">

      <div class="col-2">
        <label for="description" class="form-label">Enter the price</label>
        <input type="number" class="form-control" id="price" name="price"  placeholder="Template price">
      </div>

    

    
        
    </div>

    <div class="row form-group mb-4">

    <div class="col-4">
        <label for="templateSection" class="form-label">Template Section</label>
        <select class="form-control" id="templateSection" name="templateSection">
            <option value="business">Business</option>
            <option value="personal">Personal</option>
            <option value="casual">Casual</option>
            <option value="exclusive">Exclusive</option>
        </select>
    </div>

    
    
    
        
    </div>

    



 

     <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Update Template</button>


        <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Customer</button>


    </div>

    

</form>


<div class="modal fade" tabindex="-1" role="dilaog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">You are about to remove a customer record.</div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <p>
                    This will remove the customer record of <b class="fw-bold"></b><br/>
                    Are you sure?
                </p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                <form action="/admin/edit/{{customer._id}}?_method=DELETE" method="POST" class="position-relative">
                    <button type="submit" class="btn btn-primary">Yes, Remove Customer</button>
                </form>
            </div>


        </div>
    </div>
</div>